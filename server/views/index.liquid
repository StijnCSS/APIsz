{% layout "server/layouts/base.liquid" %}

{% block content %}
<div style="margin-bottom: 1rem;">
<a href="/archive"><button class="button">📚 View Archive</button></a>
</div>
<div class="jokes">
    <h1 class="h1" id="joke" data-joke="{{ joke }}">{{ joke }}</h1>
    <img src="/images/clippy.png" alt="Clippy mascot" style="height: 300px;">
</div>
<div style="margin-top: 1rem;">
  <button class="button" data-rating="lame">👎 Lame</button>
  <button class="button" data-rating="good">👍 Good</button>
</div>

{% endblock %}
